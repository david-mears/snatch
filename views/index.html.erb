<!DOCTYPE html>
<html>
  <head>
    <title>Snatch</title>
    <link href="assets/css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link href="assets/css/application.css" rel="stylesheet" media="screen">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body>
    <div class="container">
      <div class="jumbotron">
        <div class="row">
          <div class="col-md-7">
            <h1>Snatch</h1>
            <p id="tagline"></p>
          </div>
          <div class="col-md-5">
            <form id="room-form">
              <div class="form-group">
                <label>Room</label>
                <input id="room-form-input" type="text" class="form-control" placeholder="Enter game room name" autofocus />
              </div>
              <button class="btn btn-primary" type="submit">Go</button>
            </form>
            <form id="handle-form"></form>
            <form id="word-form"></form>
          </div>
        </div>
      </div>
      <div id="game" class="row">
        <div id="tiles-container" class="col-md-7"></div>
        <div id="word-container" class="col-md-5"></div>
        <div id="handle-container"></div>
      </div>
    </div>

    <script type="text/javascript" src="assets/js/jquery-2.0.3.min.js"></script>
    <script type="text/javascript" src="assets/js/application.js"></script>
  </body>
</html>
